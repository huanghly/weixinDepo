/* pages/user/user.wxss */
page{
    width: 100%;
    height: 100%;
}
.avatar-icon{
    position: absolute;
    height: 150rpx;
    width: 150rpx;
    border-radius: 50%;
    background-color: white;
    left: 50%;
    transform: translate(-50%, 0%); 
    bottom: 50%;
    border: 5rpx solid whitesmoke ;
}

.nickName{
    position: absolute;
    text-align: center;
    font-size: 18px;
    color: white;
    transform: translate(-50%, 0%); 
    bottom: 80rpx;
    left: 50%;
    width:100%;
}

.panel{
    position: relative;
    height: 400rpx;
    width: 100%;
}

.panel-pic{
    position: absolute;
    width: 100%;
    height: 100%;
    /*filter: blur(20px);*/
}
